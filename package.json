{
  "name": "windbreaker",
  "version": "0.0.1",
  "description": "Automated dependency management",
  "main": "src/server.js",
  "scripts": {
    "lint": "eslint .",

    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",

    "pretest": "npm run lint",
    "test": "npm run docker:start && sleep 10 && nyc ava test/unit test/integration; npm run docker:stop",
    "test:ci": "nyc ava test/unit test/integration",
    "test:unit": "nyc ava test/unit",
    "test:integration": "npm run docker:start && sleep 10 && nyc ava test/integration; npm run docker:stop",

    "start": "browser-refresh src/server.js",
    "start-cluster": "browser-refresh src/cluster.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/windbreaker-io/windbreaker.git"
  },
  "keywords": [
    "dependency",
    "management"
  ],
  "contributors": [
    {
      "name": "Charlie Duong",
      "email": "charlieduong94@gmail.com",
      "url": "https://github.com/charlieduong94"
    },
    {
      "name": "James Beavers",
      "email": "jamesjbeavers@gmail.com",
      "url": "https://github.com/Druotic"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/windbreaker-io/windbreaker/issues"
  },
  "homepage": "https://github.com/windbreaker-io/windbreaker#readme",
  "devDependencies": {
    "ava": "^0.19.1",
    "eslint": "^4.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "git-hooks": "^1.1.8",
    "nyc": "^11.0.2",
    "sinon": "^2.3.5"
  },
  "dependencies": {
    "amqplib": "^0.5.1",
    "browser-refresh": "^1.7.1",
    "bunyan": "^1.8.10",
    "bunyan-prettystream": "^0.1.3",
    "cluster-master": "^0.2.1",
    "fashion-model": "^5.0.19",
    "fashion-model-defaults": "^1.0.1",
    "js-yaml": "^3.8.4",
    "require-self-ref": "^2.0.1",
    "uuid": "^3.1.0"
  }
}
